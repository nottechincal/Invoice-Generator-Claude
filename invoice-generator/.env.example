# ============================================================================
# ENTERPRISE INVOICE GENERATOR - ENVIRONMENT VARIABLES
# ============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/invoice_generator?schema=public"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-key-min-32-characters-long-for-production"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3000/api"

# Multi-Tenant Configuration
DEFAULT_TENANT_PLAN="professional"
ENABLE_SIGNUPS=true

# Email (SendGrid)
SENDGRID_API_KEY=""
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Invoice Generator"

# Payment Gateways
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# File Storage (S3 Compatible)
S3_BUCKET_NAME=""
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_ENDPOINT="" # Optional for MinIO/DigitalOcean Spaces

# Redis (Optional - for caching & sessions)
REDIS_URL=""

# Monitoring & Logging
SENTRY_DSN="" # Optional - for error tracking
LOG_LEVEL="info" # debug, info, warn, error

# Feature Flags
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_ACCOUNTING_SYNC=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100 # requests per minute

# Security
ENABLE_MFA=true
SESSION_DURATION=3600 # seconds (1 hour)
REFRESH_TOKEN_DURATION=604800 # seconds (7 days)
